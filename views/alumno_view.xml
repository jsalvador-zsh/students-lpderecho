<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_curso_alumno_form" model="ir.ui.view">
        <field name="name">curso.alumno.form</field>
        <field name="model">curso.alumno</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group string="Información del alumno">
                            <field name="name" placeholder="Seleccione un alumno" />
                            <field name="student_phone" />
                            <field name="student_email" />
                            <field name="student_address" />
                            <field name="student_state" />
                            <field name="student_dni" />
                            <!-- <field name="student_social_net" /> -->
                            <!-- <field name="student_cod_certificado" /> -->
                             <field name="estado" />
                        </group>
                    </group>
                    <group>
                        <group string="Usuario y contraseña">
                            <field name="usuario"/>
                            <!-- Campo para ocultar el password -->
                            <field name="password" password="True" invisible="show_password == True" />
                            <!-- Campo para mostrar el password -->
                            <field name="password" password="False" invisible="show_password == False" />
                            <field name="show_password"/>
                        </group>                        
                        <group>
                            <field name="factura_ids"/>
                        </group>
                    </group>
                    <group>
                        <field name="company_id" invisible="1" />
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="view_curso_alumno_tree" model="ir.ui.view">
        <field name="name">curso.alumno.tree</field>
        <field name="model">curso.alumno</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="student_phone" />
                <field name="student_email" />
                <field name="student_address" />
            </tree>
        </field>
    </record>
    <record id="view_curso_alumno_search" model="ir.ui.view">
        <field name="name">curso.alumno.search</field>
        <field name="model">curso.alumno</field>
        <field name="arch" type="xml">
            <search>
                <!-- Añadir campos para búsqueda -->
                <field name="name" string="Estudiante"/>
                <field name="student_email" string="Correo"/>
                <field name="student_phone" string="Teléfono"/>
                <field name="student_dni" string="DNI"/>
                <field name="student_state" string="Departamento"/>
            </search>
        </field>
    </record>
    <record id="action_curso_alumno" model="ir.actions.act_window">
        <field name="name">Estudiantes</field>
        <field name="res_model">curso.alumno</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primer alumno
            </p>
            <p>Los alumnos están relacionados a los contactos, contienen información como email,
                móvil, dirección, dni, etc.</p>
        </field>
    </record>
</odoo>