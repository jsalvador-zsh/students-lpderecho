    <record id="view_curso_detalle_tree" model="ir.ui.view">
        <field name="name">curso.detalle.tree</field>
        <field name="model">curso.detalle</field>
        <field name="arch" type="xml">
            <tree string="Detalle de cursos" editable="bottom">
                <field name="name" />
                <field name="company_id" invisible="1" />
            </tree>
        </field>
    </record>

    <record id="action_curso_detalle" model="ir.actions.act_window">
        <field name="name">Detalles</field>
        <field name="res_model">curso.detalle</field>
        <field name="view_mode">tree</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primer detalle para un curso
            </p>
        </field>
    </record>

