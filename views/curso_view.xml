<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_curso_curso_form" model="ir.ui.view">
        <field name="name">curso.curso.form</field>
        <field name="model">curso.curso</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirmar_envio_notas_finales" type="object"
                        string="Confirmar Envío Notas Finales" />
                    <button name="action_confirmar_nombres_apellidos" type="object"
                        string="Confirmar Nombres y Apellidos" />
                    <button name="action_confirmar_foto_certificado" type="object"
                        string="Confirmar Foto Certificado" />
                </header>
                <sheet>
                    <group>
                        <group string="Información general">
                            <field name="name" placeholder="Ingrese el nombre del curso" />
                            <field name="estado_curso" />
                            <!-- <field name="detalle_id" /> -->
                            <field name="tipo_capacitacion" />
                            <field name="materia_id" />
                            <field name="num_sesiones" />
                            <field name="num_examenes" />
                        </group>
                        <group string="Enlaces">
                            <field name="enlace_aula" widget="url" />
                            <field name="enlace_db" widget="url" />
                        </group>
                    </group>
                    <group>
                        <group string="Fechas y responsables">
                            <field name="fecha_inicio" />
                            <field name="fecha_fin" />
                            <field name="vigencia" />
                            <field name="cancelar" />
                            <field name="estado_aula" />
                            <field name="cancelado" />
                        </group>
                        <group string="Información complementaria">
                            <field name="convenio" widget="many2many_tags" />
                            <field name="certificado" />
                            <field name="estado_certificado" />
                        </group>
                    </group>
                    <group>
                        <field name="confirmar_envio_notas_finales" readonly="1" />
                        <field name="confirmar_nombres_apellidos" readonly="1" />
                        <field name="confirmar_foto_certificado" readonly="1" />
                    </group>
                    <group>
                        <field name="company_id" invisible="1" />
                    </group>
                    <notebook>
                        <page name="Detalle" string="Notas">
                            <field name="detalle_curso" widget="html"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>

    <record id="view_curso_curso_tree" model="ir.ui.view">
        <field name="name">curso.curso.tree</field>
        <field name="model">curso.curso</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="estado_curso" widget="badge"
                    decoration-success="estado_curso == 'vigente'"
                    decoration-danger="estado_curso == 'culmino'" />
                <!-- <field name="detalle_id" /> -->
                <field name="materia_id" />
                <field name="tipo_capacitacion" />
                <field name="certificado" />
                <field name="estado_aula" widget="badge"
                    decoration-success="estado_aula == 'habilitado'"
                    decoration-warning="estado_aula == 'cancelando'"
                    decoration-danger="estado_aula == 'cancelado'" />
                <field name="estado_certificado" widget="badge"
                    decoration-success="estado_certificado == 'entrega'"
                    decoration-warning="estado_certificado == 'tramite'"
                    decoration-danger="estado_certificado == 'plazo'" />
                <button name="action_view_students" type="object" string="Ver Estudiantes"
                    class="oe_highlight" icon="fa-users" />
            </tree>
        </field>
    </record>
    <record id="view_curso_curso_search" model="ir.ui.view">
        <field name="name">curso.curso.search</field>
        <field name="model">curso.curso</field>
        <field name="arch" type="xml">
            <search>
                <!-- Añadir campos para búsqueda -->
                <field name="name" string="Nombre del Curso"/>
                <field name="materia_id" string="Materia"/>
                <field name="estado_aula" string="Estado del Aula"/>
                <field name="estado_curso" string="Estado del Curso"/>
                <field name="certificado" string="Certificación"/>
                <field name="fecha_inicio" string="Fecha de Inicio"/>
                <field name="fecha_fin" string="Fecha de Fin"/>
            </search>
        </field>
    </record>
    <record id="action_curso_curso" model="ir.actions.act_window">
        <field name="name">Cursos</field>
        <field name="res_model">curso.curso</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primer curso
            </p>
            <p>Los cursos contienen información de los programas impartidos, estudiantes
                matriculados, materiales, etc.</p>
        </field>
    </record>
</odoo>